<div class="container">
	<div class="row">

		<div class="col-12 border-bottom pb-3">
			<h1 class="my-4">Search Events</h1>
			<%= form_for search_path, method: :get do |f| %>
				<div class="row">
					<div class="col">
						<%= text_field_tag :q, params[:q], class: 'form-control', placeholder: 'Search' %>
					</div>
					<div class="col-3 col-md-2 col-lg-1">
						<%= submit_tag "Go", name: nil, class: 'btn btn-primary w-100' %>
					</div>
				</div>
			<% end %>
		</div>

		<div class="my-4 row">

		<div class="col-12">
			<h4 class="ml-2">Results</h4>
		</div>

		<% @events.each do |event| %>
			<div class="col-11 col-md-8 col-lg-4">

				<div class="card mb-3 shadow-sm p-2">
					<div class="card-img-top">
						<a href='<%= event_path(event) %>'>
							<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 13rem; object-fit: cover; object-position: center; background-color: black') %>
						</a>
						<h4 class="text-light" style="position: absolute; left: 1rem; top: 0.75rem;"><%= event.title %></h4>
						<p class="text-light" style="position: absolute; right: 1rem; top: 0.75rem;"><%= event.views %><img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
					</div>
					<div class="card-body py-1 px-0">
					<p class="card-text small"><%= Date.parse(event.start_date).strftime("%a %-d/%-m/%y") %> to <%= Date.parse(event.end_date).strftime("%a %-d/%-m/%y") %><br>
						<%= event.address %> <%= event.postcode %></p>
					</div>
				</div>

			</div>
		<% end %>

		</div>
		



	</div>
</div>