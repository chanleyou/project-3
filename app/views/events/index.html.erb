
<%= stylesheet_link_tag "events_index" %>


<div class="container-fluid">

	<div class="row my-4">

		<!-- Left sidebar -->
		<div class="col-xl-3 col-lg-4 col-md-5">
			<div>
				<h4>Search, filters, stuff go here</h4>
			</div>
			<div id="map"></div>
		</div>

		<!-- Events display -->
		<div class="col-xl-9 col-lg-8 col-md-7">
			<h1 class="display-4 mb-4">Events</h1>
				<div class="card-deck">

						<% @events.each do |event| %>
							<div class="card mb-4 shadow-sm p-2 mx-2">
								<div class="card-img-top">
									<a href='<%= event_path(event) %>'>
										<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 12rem; object-fit: cover; object-position: center; background-color: black') %>
									</a>
									<!-- <h5 class="text-light" style="position: absolute; left: 1rem; top: 0.75rem;"><%= event.title %></h5> -->
									<p class="text-light" style="position: absolute; right: 1rem; top: 0.75rem;"><%= event.views %><img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
								</div>
								<div class="card-body py-1 px-0">
									<strong><%= event.title %></strong>
									<p class="card-text small"><%= event.start_date.strftime("%H:%M%P %a %-d/%-m/%y") %> to <%= event.end_date.strftime("%H:%M%P %a %-d/%-m/%y") %><br>
									<%= event.address %> <%= event.postcode %></p>
								</div>
								<div class="card-footer mt-1 p-0 border-0">
						      <small><%= event.start_time.strftime("%H:%M%P") %> to <%= event.end_time.strftime("%H:%M%P") %></small>
						    </div>
							</div>
						<% end %>

				</div>
		</div>
	</div>
</div>




<%= javascript_include_tag "events_index" %>
<script async defer type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBCFHJd-010wTpUGyWk2qY8djx5kwywzdU&callback=initMap"></script>












