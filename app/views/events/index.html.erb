
<%= stylesheet_link_tag "events_index" %>


<div class="container-fluid">

	<div class="row my-4">

		<!-- Left sidebar -->
		<div class="col-xl-3 col-lg-4 col-md-5">
			<div>
				<%= form_for :search, url: events_path, method: :get do |f| %>
<!-- 					<div class="form-group row">
						<div class="col-8 col-md-9">
							<%= text_field_tag :q, params[:q], class: 'form-control-lg form-control typeahead', placeholder: 'Search' %>
						</div>
						<div class="col-3 col-md-2">
							<%= submit_tag "Go", name: nil, class: 'btn btn-lg btn-primary' %>
						</div>
					</div> -->
					<div class="form-group row">
						<div class="col-8 col-md-9">
							<%= text_field_tag :p, params[:p], class: 'form-control-lg form-control', placeholder: 'Your postal code' %>
						</div>
						<div class="col-3 col-md-2">
							<%= submit_tag "Go", name: nil, class: 'btn btn-lg btn-primary' %>
						</div>
					</div>
				<% end %>
			</div>
			<div id="map"></div>
		</div>

		<!-- Events display -->
		<div class="col-xl-9 col-lg-8 col-md-7">
			<h1 class="display-4 mb-4">Events</h1>
				<div class="card-deck">

						<% @events.each do |event| %>
							<div class="card mb-4 p-2 mx-2 bg-white">
								<div class="card-img-top">
									<a href='<%= event_path(event) %>'>
										<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 12rem; object-fit: cover; object-position: center; background-color: black') %>
									</a>
									<!-- <h5 class="text-light" style="position: absolute; left: 1rem; top: 0.75rem;"><%= event.title %></h5> -->
									<p class="text-light" style="position: absolute; right: 1rem; top: 0.75rem;"><%= event.views %><img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
								</div>
								<div class="card-body py-1 px-0">
									<strong><%= event.title %></strong>
									<p class="card-text small">
										<%= event.description %><br>
										<%= event.address %>
<!-- 										S<%= event.postcode %> -->
									</p>
								</div>
								<div class="card-footer p-0 border-0 bg-transparent">
						      <small>
						      <%= event.start_date.strftime("%a #{event.start_date.day.ordinalize} %b") %> - <%= event.end_date.strftime("%a #{event.end_date.day.ordinalize} %b") %><br>
									<%= event.start_time.strftime("%-I:%M%P") %> to <%= event.end_time.strftime("%-I:%M%P") %>
						      </small>
						    </div>
							</div>
						<% end %>

				</div>
		</div>
	</div>
</div>




<%= javascript_include_tag "events_index" %>
<script async defer type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBCFHJd-010wTpUGyWk2qY8djx5kwywzdU&libraries=geometry&callback=initMap"></script>












