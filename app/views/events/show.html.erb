<%= cl_image_tag(@event.photo_url, class: "img-fluid", style: 'max-height: 300px; object-fit: none; object-position: center; width: 100%') %>

<div class="container">

	<div class="row">
		<div class="col-12">
			<h1 class="display-4 mt-2"><%= @event.title %></h1>
			<p class="my-0">Date: <%= @event.date %></p>
			<p class="mt-0 mb-3">Location: <%= @event.date %></p>
			<p><%= @event.description %></p>
		</div>		
	</div>

	<div class="row">
		<div class="col-12">
			<div class="card bg-light p-3">
				<p>By: <strong><%= link_to @event.chef.name, chef_path(@event.chef) %></strong></p>
				<p><%= @event.chef.description %></p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-12">
		<%= link_to 'Back', events_path %>
		<% if @event.chef == current_chef %>
			<%= link_to 'Edit', edit_event_path(@event) %>
			<%= link_to 'Delete', event_path(@event),
						method: :delete,
						data: { confirm: 'Are you sure you want to delete this event?' } %>
		<% end %>
		</div>
	</div>

</div>

