
<div class="container">

	<div class="row">

		<div class="col-4" style="padding: 4px">
		<%= cl_image_tag(@event.photo_url, style: 'max-height: 300px; width: 100%') %>
		</div>

		<div class="col-8" style="padding: 4px">
			<h1 class="display-4 mt-2"><%= @event.title %></h1>
			<p class="my-0">FROM: <%= @event.start_date.strftime("%H:%M%P %a %-d/%-m/%y") %></p>
			<p>TO: <%= @event.end_date.strftime("%H:%M%P %a %-d/%-m/%y") %></p>
			<p class="mt-0 mb-3">LOCATION: <%= @event.address %> <%= @event.postcode %></p>
			<p>ABOUT: <%= @event.description %></p>
		</div>
			<div class="row-12">
				<section class="accordion-section clearfix mt-3" aria-label="Question Accordions">
				  <div class="container">

					  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
						<div class="panel panel-default">
						  <div class="panel-heading p-3 mb-3" role="tab" id="heading0">
							<h3 class="panel-title">
							  <a class="collapsed" role="button" title="" data-toggle="collapse" data-parent="#accordion" href="#collapse0" aria-expanded="true" aria-controls="collapse0">
								Menu
							  </a>
							</h3>
						  </div>
						  <div id="collapse0" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading0">
							<div class="panel-body px-3 mb-4">

											<table class="table">
											<thead class="thead-light">
											<tr>
												<th>Menu</th>
												<th>Description</th>
												<th>Course</th>
												<th>Price</th>
											</tr>
											</thead>
												<tbody>
													<% @event.dishes.each do |dish| %>
														<tr>
														<td><%= dish.name %></td>
														<td><%= dish.description %></td>
														<td><%= dish.course %></td>
														<td>$<%= dish.price %></td>
														</tr>
													<% end %>
												</tbody>
											</table>

							</div>
						  </div>
						</div>


						<div class="panel panel-default">
						  <div class="panel-heading p-3 mb-3" role="tab" id="heading2">
							<h3 class="panel-title">
							  <a class="collapsed" role="button" title="" data-toggle="collapse" data-parent="#accordion" href="#collapse2" aria-expanded="true" aria-controls="collapse2">
								Pre-orders
							  </a>
							</h3>
						  </div>
						  <div id="collapse2" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading2">
							<div class="panel-body px-3 mb-4">
							  <% if current_chef == @event.chef || current_customer %>

							  		<div class="row">

							  		<div class="col-12 my-3">
							  			<h3 class="my-0"><% if current_customer && @orders.length > 0 %>Your preorders <% end %></h3>
							  			<% if current_customer %><p class="my-0"><%= link_to 'Preorder', new_event_order_url(@event) %></p><% end %>
							  		</div>

							  			<% @orders.each do |order| %>

							  				<div class="col">
							  					<div style="background-color: #ffe6e6; border: 3px solid gray">

							  						<p><strong>Order <%= order.id %></strong><br>
							  						<% if current_chef %>Customer: <%= order.customer.username %><br><% end %>
							  						Time: <%= order.time.strftime("%H:%M%P %a %-d/%-m/%y") %><br>
							  						Total: $<%= order.total %></p>


							  						<% order.orderitems.each do |orderitem| %>
							  							- <%=  orderitem.dish.name %> x<%= orderitem.quantity %> @ $<%= orderitem.dish.price %> each
							  							<% end %>


							  					</div>
							  				</div>

							  			<% end %>

							  		</div>

							  	<% end %>


							  	<div class="row">
							  		<div class="col-12">
							  		<%= link_to 'Back', events_path %>
							  		<% if @event.chef == current_chef %>
							  			<%= link_to 'Edit', edit_event_path(@event) %>
							  			<%= link_to 'Delete', event_path(@event),
							  						method: :delete,
							  						data: { confirm: 'Are you sure you want to delete this event?' } %>
							  		<% end %>
							  		</div>
							  	</div>
							</div>
						  </div>
						</div>




					  </div>

				  </div>
				</section>

		<div class="col-8" style="padding: 4px">
		</div>
	</div>

</div>




	<div class="row">
		<div class="col-4">
			<div class="card bg-light p-3">
				<p>By: <strong><%= link_to @event.chef.name, chef_path(@event.chef) %></strong></p>
				<p class="m-0"><%= @event.chef.description %></p>
			</div>
		</div>

	</div>
</div>



