<div class="jumbotron jumbotron-fluid" style="background-image: url('<%= image_url 'background.jpg' %>'); background-position: center; min-height: 325px; ">

	<div class="container">

	<div class="row py-4">
		</div>

		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<h1 class="display-4 text-light text-left">Eat tagline here.</h1>
				<form>
					<div class="form-group">
						<input type="text" class="form-control form-control-lg display-4 shadow-sm" placeholder="Search" autocomplete="off">
					</div>
				</form>
			</div>
		</div>
	</div>

</div>

<div class="container">
	
	<div class="row justify-content-center my-5">
	
	<div class="col-11 col-md-12">
		<h3 class="mt-2 mb-0 mx-1">Popular</h3>
		<p class="lead mx-1">See what people like in your area:</p>
	</div>

		<% @events.each do |event| %>
			<div class="col-11 col-md-4">

				<div class="card shadow-sm mb-3">
					<div class="card-img-top">
						<a href='<%= event_path(event) %>'>
							<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 13rem; object-fit: cover; object-position: center; background-color: black') %>
						</a>
						<h4 class="text-light" style="position: absolute; left: 0.5rem; top: 0.25rem;"><%= event.title %></h4>
						<p class="text-light" style="position: absolute; right: 0.5rem; top: 0.4rem;">2<img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
					</div>
					<div class="card-body py-1 px-2">
						<p class="card-text small">Date: <%= event.date %><br>
						<%= event.address %></p>				
					</div>
				</div>

			</div>
		<% end %>

	</div>

</div>