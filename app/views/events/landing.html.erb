<div class="jumbotron jumbotron-fluid" style="background-image: url('<%= image_url 'background.jpg' %>'); background-position: center; min-height: 325px; ">

	<div class="container">

	<div class="row py-4">
		</div>

		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				<h1 class="display-4 text-light text-left">Eat tagline here.</h1>
				<%= form_for :search, url: search_path, method: :get do |f| %>
					<div class="form-group row">
					<div class="col">
						<%= text_field_tag :q, params[:q], class: 'form-control-lg form-control dispaly-4 shadow-sm', autocomplete: 'off', placeholder: 'Search' %>
					</div>
					<div class="col-3 col-md-2">
						<%= submit_tag "Go", name: nil, class: 'btn btn-lg btn-primary w-100' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>

</div>

<div class="container">

	<div class="row my-5 justify-content-center">

	<div class="col-11 col-md-8 col-lg-12">
		<h3 class="mt-2 mb-0 mx-1">Popular</h3>
		<p class="lead mx-1">See what people like in your area:</p>
	</div>

		<% @popular.each do |event| %>
			<div class="col-11 col-md-8 col-lg-4">

				<div class="card mb-3 shadow-sm p-2">
					<div class="card-img-top">
						<a href='<%= event_path(event) %>'>
							<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 13rem; object-fit: cover; object-position: center; background-color: black') %>
						</a>
						<h4 class="text-light" style="position: absolute; left: 1rem; top: 0.75rem;"><%= event.title %></h4>
						<p class="text-light" style="position: absolute; right: 1rem; top: 0.75rem;"><%= event.views %><img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
					</div>
					<div class="card-body py-1 px-0">
						<p class="card-text small"><%= event.start_date.strftime("%a %-d/%-m/%y") %> to <%= event.end_date.strftime("%a %-d/%-m/%y") %><br>
						<%= event.address %> <%= event.postcode %></p>
					</div>
				</div>

			</div>
		<% end %>

		<div class="col-11 col-md-8 col-lg-12">
		<h3 class="mt-4 mb-0 mx-1">Upcoming</h3>
		<p class="lead mx-1">Coming soon to a location near you:</p>
	</div>

	<% @upcoming.each do |event| %>
		<div class="col-11 col-md-8 col-lg-4">

		<div class="card mb-3 shadow-sm p-2">
		<div class="card-img-top">
			<a href='<%= event_path(event) %>'>
				<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 13rem; object-fit: cover; object-position: center; background-color: black') %>
			</a>
			<h4 class="text-light" style="position: absolute; left: 1rem; top: 0.75rem;"><%= event.title %></h4>
			<p class="text-light" style="position: absolute; right: 1rem; top: 0.75rem;"><%= event.views %><img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
		</div>
		<div class="card-body py-1 px-0">
			<p class="card-text small"><%= event.start_date.strftime("%a %-d/%-m/%y") %> to <%= event.end_date.strftime("%a %-d/%-m/%y") %><br>
			<%= event.address %> <%= event.postcode %></p>
		</div>
	</div>

		</div>
	<% end %>


	</div>

</div>