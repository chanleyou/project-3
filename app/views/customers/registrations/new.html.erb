<div class="container">
	<h1 class="mt-4 mb-0">User Registration</h1>
	<p><%= link_to 'Login', new_customer_session_path %></p>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		
		<div class="form-group">
			<label>Username:</label>
			<%= f.text_field :username, autocomplete: "off", autofocus: true, class: 'form-control' %>
		</div>

		<div class="form-group">
			<label>Email:</label>
			<%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
		</div>

		<div class="form-group">
			<label>
				Password: <% if @minimum_password_length %>
				<span class="small"><em>(<%= @minimum_password_length %> characters minimum)</em></span><% end %>
			</label>
			<%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
		</div>

		<div class="form-group">
			<label>Password Confirmation:</label>
			<%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
		</div>

		<div class="actions">
			<%= f.submit "Register", class: "btn btn-primary shadow-sm" %>
		</div>
	<% end %>

</div>
