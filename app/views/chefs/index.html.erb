<div class="container">

	<div class="row">
	
		<div class="col-12">
		
			<h1 class="my-4 ml-2">Chefs</h1>

		</div>

			<% @chefs.each do |chef| %>
			
				<div class="col-12">
					<div class="card shadow-sm p-3">
						<div class="row">
							<div class="col-2">
								<%= image_tag( "default_profile.jpg", class: "img-fluid") -%>
							</div>
							<div class="col">
								<h4 class="mb-0"><a href='<%= chef_path(chef) %>'><%= chef.name %></a></h4>
								<p>Events: <%= chef.events.length %></p>
								<p><%= chef.description %></p>
							</div>
						</div>
					
					</div>
				
				</div>
			
			<% end %>

	</div>

</div>