<%= stylesheet_link_tag "chefs_show" %>

<div class="container" style="margin-top: 20px">
	<div class="card mb-3 shadow-sm p-2">
	<div class="row margin-top-20 margin-bottom-20">
						<div class="col col-2">
							<%= image_tag( "default_profile.jpg", size: "150x150", :alt => "rss feed") -%>
						</div>
						<div class="col col-10">
							  <div class="card-body">
							    <h5 class="card-title">NAME: <%= @chef.name %></h5>
							    <h5 class="card-title">DESCRIPTION: <%= @chef.description %></h5>
							    <p> REGISTERED SINCE: <%= @chef.created_at %></p>
							  </div>
						</div>
	</div>
	</div>



<h3>Have a look at all <%= @chef.name %>'s events</h3>
<div class="container">

	<div class="row my-5 justify-content-center">

<% @events.each do |event| %>
	<div class="col-11 col-md-8 col-lg-4">

					<div class="card mb-3 shadow-sm p-2">
						<div class="card-img-top">
							<a href='<%= event_path(event) %>'>
								<%= cl_image_tag(event.photo_url, style: 'width: 100%; height: 13rem; object-fit: cover; object-position: center; background-color: black') %>
							</a>
							<h4 class="text-light" style="position: absolute; left: 1rem; top: 0.75rem;"><%= event.title %></h4>
							<p class="text-light" style="position: absolute; right: 1rem; top: 0.75rem;"><%= event.views %><img src=<%= image_url 'eye.png' %> width="20px" height="20px" class="align-text-bottom ml-1"></p>
						</div>
						<div class="card-body py-1 px-0">
							<p class="card-text small"><%= event.start_date.localtime.strftime("%H:%M%P %a %-d/%-m/%C") %> to <%= event.end_date.localtime.strftime("%H:%M%P %a %-d/%-m/%C") %><br>
							<%= event.address %> <%= event.postcode %></p>
						</div>
					</div>

				</div>
<% end %>
</div>
</div>

<%= link_to 'Back', chefs_path %>
</div>